{
  "name": "my-portfolio",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://afif.dev",
  "scripts": {
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "debug:dev": "NODE_OPTIONS='--inspect' next dev",
    "check-lint": "eslint . --ignore-path .gitignore --ignore-pattern /out --ignore-pattern /.next",
    "check-format": "prettier --list-different --ignore-path .gitignore .",
    "lint": "eslint . --fix --ignore-path .gitignore --ignore-pattern /out --ignore-pattern /.next",
    "format": "prettier --write --list-different --ignore-path .gitignore .",
    "validate": "npm-run-all --parallel lint format",
    "validate:build": "npm-run-all --parallel validate build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/core": "^7.20.5",
    "@badrap/bar-of-progress": "^0.2.2",
    "@chakra-ui/icons": "^2.0.13",
    "@chakra-ui/react": "^2.4.2",
    "@chakra-ui/system": "^2.2.2",
    "@chakra-ui/theme-tools": "^2.0.5",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.13",
    "classnames": "^2.3.2",
    "framer-motion": "^6.5.1",
    "gray-matter": "^4.0.3",
    "memory-cache": "^0.2.0",
    "moment": "^2.29.4",
    "next": "^13.0.6",
    "next-seo": "^5.14.1",
    "next-themes": "^0.2.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.7.1",
    "remark": "^13.0.0",
    "remark-html": "^13.0.2",
    "sass": "^1.56.1",
    "typescript": "^4.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@types/memory-cache": "^0.2.2",
    "@types/node": "^18.11.10",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.2.5",
    "commitlint-config-gitmoji": "^2.2.6",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-next": "^13.0.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "prettier": "^2.8.0",
    "process": "^0.11.10"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn lint",
    "*.{js,jsx,ts,tsx,css,json,md}": "yarn format"
  }
}
