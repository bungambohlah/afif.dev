{
  "name": "my-portfolio",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://afifjusuf.id",
  "scripts": {
    "install:clean": "rm -rf node_modules && rm yarn.lock && yarn",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "debug:dev": "NODE_OPTIONS='--inspect' next dev",
    "check-lint": "eslint . --ignore-path .gitignore --ignore-pattern /out --ignore-pattern /.next",
    "check-format": "prettier --list-different --ignore-path .gitignore .",
    "lint": "eslint . --fix --ignore-path .gitignore --ignore-pattern /out --ignore-pattern /.next",
    "format": "prettier --write --list-different --ignore-path .gitignore .",
    "validate": "npm-run-all --parallel lint format",
    "validate:build": "npm-run-all --parallel validate build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@badrap/bar-of-progress": "^0.1.2",
    "@chakra-ui/icons": "^1.1.1",
    "@chakra-ui/react": "^1.7.2",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^1.0.5",
    "classnames": "^2.3.1",
    "framer-motion": "^4",
    "gray-matter": "^4.0.3",
    "moment": "^2.29.1",
    "next": "^12.0.4",
    "next-seo": "^4.28.1",
    "next-themes": "0.0.15",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-icons": "^4.3.1",
    "remark": "13",
    "remark-html": "13",
    "sass": "^1.36.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/react": "^17.0.37",
    "autoprefixer": "^10.4.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-galex": "^3.3.6",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "process": "^0.11.10"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn lint",
    "*.{js,jsx,ts,tsx,css,json,md}": "yarn format"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
